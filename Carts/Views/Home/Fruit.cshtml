@model List<Carts.Models.Cart.Product>
@{
    ViewBag.Title = "Fruit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>水果</h2>
<div class="row">
    @foreach (var product in this.Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img class="ProductImg" src="@product.DefaultImageURL" alt="商品圖片">
                <div class="caption">
                    <h3>@product.Name</h3>
                    <p>@product.Description</p>
                    <p>售價: @product.Price</p>
                    <p>
                        <a onclick="AddToCart('@product.Id')" href="javascript:void(0);"
                           class="btn btn-primary" role="button">
                            加入購物車
                        </a>
                        <a href="@Url.Action("Detail", new { id = product.Id })" class="btn btn-default" role="button">
                            詳細資訊
                        </a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>
<p>
    @Html.ActionLink("回首頁", "Index", null, new { @class = "btn btn-default" })
</p>

